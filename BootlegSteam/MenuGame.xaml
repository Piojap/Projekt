<Window x:Class="BootlegSteam.MenuGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BootlegSteam"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="None"
        MouseDown="dragwindow"
        Height="720"
        Width="1280"
        Title="MenuGame">
    <Viewbox>
        <Grid ShowGridLines="True">
            <Grid.Resources>
                <Style TargetType="Label">
                    <Setter Property="Height" Value="60"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="Width" Value="115"/>
                </Style>
                <Style TargetType="TextBox">
                    <Setter Property="Height" Value="60"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="Width" Value="400"/>
                </Style>
            </Grid.Resources>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"></ColumnDefinition>
                <ColumnDefinition Width="565"></ColumnDefinition>
                <ColumnDefinition Width="50"></ColumnDefinition>
                <ColumnDefinition Width="565"></ColumnDefinition>
                <ColumnDefinition Width="50"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="35"></RowDefinition>
                <RowDefinition Height="60"></RowDefinition>
                <RowDefinition Height="58"></RowDefinition>
                <RowDefinition Height="60"></RowDefinition>
                <RowDefinition Height="58"></RowDefinition>
                <RowDefinition Height="60"></RowDefinition>
                <RowDefinition Height="58"></RowDefinition>
                <RowDefinition Height="60"></RowDefinition>
                <RowDefinition Height="58"></RowDefinition>
                <RowDefinition Height="60"></RowDefinition>
                <RowDefinition Height="58"></RowDefinition>
                <RowDefinition Height="60"></RowDefinition>
                <RowDefinition Height="35"></RowDefinition>
            </Grid.RowDefinitions>

            <Button Height="25" Width="25" Click="clkclose" Grid.Column="4" Grid.Row="0" Margin="15,10,10,0" />
            <Button Height="25" Width="25" Click="clkmaximize" Grid.Column="3" Grid.Row="0" Grid.ColumnSpan="2" Margin="545,10,45,0"/>
            <Button Height="25" Width="25" Click="clkminimize" Grid.Column="3" Grid.Row="0" Margin="510,10,30,0"/>
            <Button Height="25" Width="25" Click="clkback" Grid.Column="3" Grid.Row="0" Margin="475,10,65,0"/>
            <Button Name="addgame" Height="60" Width="60" Grid.Column="1" Grid.Row="1" Margin="30,0,475,0" Click="addgame_Click"/>
            <Button Name="updategame" Height="60" Width="60" Grid.Column="1" Grid.Row="1" Margin="120,0,385,0" Click="updategame_Click"/>
            <Button Name="deletegame" Height="60" Width="60" Grid.Column="1" Grid.Row="1" Margin="210,0,295,0" Click="deletegame_Click"/>
            <Button x:Name="refresh" Click="refresh_Click" Height="60" Width="60" Grid.Column="3" Grid.Row="1" Margin="295,0,210,0"/>
            <Button x:Name="uploadgamepic" Click="uploadgamepic_Click" Height="60" Width="60" Grid.Column="1" Grid.Row="3" Margin="120,0,385,0"/>
            <Button x:Name="uploaddevpic" Click="uploaddevpic_Click" Height="60" Width="60" Grid.Column="3" Grid.Row="3" Margin="385,0,120,0"/>

            <ComboBox Name="combogames" DisplayMemberPath="title" SelectedValuePath="id" SelectedValue="{Binding id}" Height="60" Width="565" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="3" HorizontalAlignment="Center" VerticalAlignment="Center" SelectionChanged="combogames_SelectionChanged"/>

            <Image x:Name="valgamepicture" Height="178" Width="178" Grid.Column="1" Grid.Row="3" Grid.RowSpan="3" VerticalAlignment="Top" Stretch="Fill"/>
            <Image x:Name="valdevpicture" Height="178" Width="178" Grid.Column="3" Grid.Row="3" Grid.RowSpan="3" VerticalAlignment="Top" Stretch="Fill"/>

            <Label Grid.Column="1" Content="GAME TITLE" HorizontalAlignment="Left" Grid.Row="7"/>
            <Label Grid.Column="1" Content="CREATION" HorizontalAlignment="Left" Grid.Row="9"/>
            <Label Grid.Column="1" Content="GAME SCORE" HorizontalAlignment="Left" Grid.Row="11"/>
            <Label Grid.Column="3" Content="DEV NAME" HorizontalAlignment="Right" Grid.Row="7"/>
            <Label Grid.Column="3" Content="GAMES MADE" HorizontalAlignment="Right" Grid.Row="10"/>

            <TextBox x:Name="valtitle" Grid.Column="1" HorizontalAlignment="Right" Grid.Row="7" TextWrapping="Wrap" Text=""/>
            <DatePicker x:Name="valcreation" Grid.Column="1" HorizontalAlignment="Right" Grid.Row="9" Width="400" Height="60"/>
            <Slider x:Name="valscore" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Row="11" Width="340" Maximum="10" Minimum="1" TickFrequency="1" IsSnapToTickEnabled="True" TickPlacement="BottomRight" AutoToolTipPlacement="TopLeft" AutoToolTipPrecision="0" Margin="0,0,60,0"/>
            <TextBox Text="{Binding ElementName=valscore, Path=Value, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" HorizontalAlignment="Right" Grid.Row="11" Width="60" Height="60"/>
            <ComboBox x:Name="valdev" DisplayMemberPath="title" SelectedValuePath="id" SelectedValue="{Binding id}" Grid.Column="3" HorizontalAlignment="Left" Grid.Row="7" Width="400" SelectionChanged="valdev_SelectionChanged"/>
            <DataGrid x:Name="valdevgames" Grid.Column="3" HorizontalAlignment="Left" Grid.Row="9" Grid.RowSpan="3" Width="400"/>
        </Grid>
    </Viewbox>
</Window>
